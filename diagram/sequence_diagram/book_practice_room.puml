@startuml
actor Customer as C
participant ReserveSystem as Rs
participant Branch as Br
participant Cart as Ct
participant Room as R



C -> Rs: booking_room(room _id, duration)
loop [for each room in branch]
    Rs -> Br: get_room(room_id)
    activate Br
    Br -> R:find_room
    activate R
    R -> Br: room instance
    deactivate R
    Br -> Rs: room instance
    deactivate Br
    end

Rs -> Ct: make cart()
activate Ct
Ct --> Rs: cart instance
deactivate Ct








    




